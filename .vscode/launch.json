  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Massive Wiki Builder",
      "type": "python",
      "request": "launch",
      "program": "mwb.py",
      "args": [
        "-c",
        "../mwb.yaml",
        "-w",
        "../..",
        "-o",
        "../output",
        "-t",
        "../this-wiki-themes/basso",
        "--lunr"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}/.massivewikibuilder/massivewikibuilder/"
    }
  ]
}
